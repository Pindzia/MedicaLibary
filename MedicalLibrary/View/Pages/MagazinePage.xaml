<Page x:Class="MedicalLibrary.View.Pages.MagazinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalLibrary.View.Pages"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      x:Name="Page"
      mc:Ignorable="d" 
      Title="MagazinePage"
      >

    <i:Interaction.Triggers>
        <i:EventTrigger SourceName="Page" EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Header="Lista Magazynów">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">
                        <ListBox x:Name="List" 
                         ItemsSource="{Binding ListMagazine}"
                         PreviewMouseRightButtonDown="List_PreviewMouseRightButtonDown"
                         Margin="10,10,10,5">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding Path=DataContext.ShowMagazine , ElementName=List}" 
                                                    CommandParameter="{Binding Path=Element[ids].Value}"
                                            HorizontalContentAlignment="Stretch"
                                                    BorderBrush="White">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="8*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Grid.IsSharedSizeScope="True">
                                                <TextBlock  Text="{Binding Path=Element[priority].Value}" />
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Grid.IsSharedSizeScope="True">
                                                <TextBlock Grid.Column="1" Text="{Binding Path=Element[name].Value}" />
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <Button Command="{Binding OrderUp}" Margin="10,0,10,0" Content="{iconPacks:PackIconFontAwesome AngleDoubleUp}" IsEnabled="{Binding ChangeUp}"/>
                        <Button Command="{Binding OrderDown}" Margin="10,0,10,0" Content="{iconPacks:PackIconFontAwesome AngleDoubleDown}" IsEnabled="{Binding ChangeDown}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="2" Header="Dane Magazynu" Margin="10,0,10,0">
                <Grid  Margin="20,0,0,0" Height="Auto" Width="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="7*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0">
                        <Label Content="Dane Wybranego Magazynu" FontSize="14" FontWeight="Bold" Margin="70,0,0,0" DockPanel.Dock="Top"/>
                        <StackPanel  Orientation="Vertical" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type DockPanel}">
                                    <Setter Property="Margin" Value="0,10,0,10"/>
                                </Style>
                            </StackPanel.Resources>
                            <DockPanel>
                                <Label Content ="Nazwa Magazynu :" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding MagazineName}" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content ="ID Magazynu :" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding MagazineId}" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content ="Ilość Pacjentów :" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding MagazineCount}" HorizontalAlignment="Right"/>
                            </DockPanel>
                            <DockPanel>
                                <Label Content ="Priorytet :" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding MagazinePriority}" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Grid.Row="1">
                        <Label Content="Lista Pacjentów Danego Magazynu:" FontSize="14" DockPanel.Dock="Top" FontWeight="Bold" Margin="70,0,0,0"/>
                        <DataGrid DataContext="{Binding PatientsOfMagazine}" 
                                          Grid.Row="1"
                                          ItemsSource="{Binding}"  
                                          IsReadOnly="True" 
                                          SelectionMode="Single"
                                          AutoGenerateColumns="False"
                                          Width="540"
                                          Height="300"
                                          RowHeaderWidth="1"
                                          VerticalContentAlignment="Center"
                                          Margin="50,10,50,0"
                                          HorizontalContentAlignment="Center" 
                                          BorderBrush="AliceBlue" 
                                          BorderThickness="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Path=.Element[idp].Value}"/>
                                <DataGridTextColumn Header="Magazyn" Binding="{Binding Path=Element[storehouse].Value}"/>
                                <DataGridTextColumn Header="Koperta" Binding="{Binding Path=Element[envelope].Value}"/>
                                <DataGridTextColumn Header="Imie" Binding="{Binding Path=Element[imie].Value}"/>
                                <DataGridTextColumn Header="Nazwisko" Binding="{Binding Path=Element[nazwisko].Value}"/>
                                <DataGridTextColumn Header="Pesel" Binding="{Binding Path=Element[pesel].Value}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </Grid>
        
        </GroupBox>
        </Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Row="1">
            <StackPanel.Resources>
                <Style TargetType="{x:Type mui:ModernButton}">
                    <Setter Property="Margin" Value="25,10,25,10"/>
                </Style>
            </StackPanel.Resources>
            <mui:ModernButton Command="{Binding AddMagazine}" Height="25" Width="120">Dodaj Magazyn</mui:ModernButton>
            <mui:ModernButton Command="{Binding EditMagazine}" Height="25" Width="120">Edytuj Magazyn</mui:ModernButton>
            <mui:ModernButton Command="{Binding DeleteMagazine}" Height="25" Width="120">Usuń Magazyn</mui:ModernButton>
        </StackPanel>
    </Grid>
</Page>
