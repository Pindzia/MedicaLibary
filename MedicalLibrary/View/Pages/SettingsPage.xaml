<Page x:Class="MedicalLibrary.View.Pages.SettingsPage"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicalLibrary.View.Pages"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SettingsPage">

    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/View/Pages/ToolsPage.xaml" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Narzędzia Bazy" Source="/View/Pages/ToolsPage.xaml" />
                <mui:Link DisplayName="Niestandardowe Pola" Source="/View/Pages/CustomFieldPage.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</Page>
