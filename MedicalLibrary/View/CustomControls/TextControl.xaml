<UserControl x:Class="MedicalLibrary.View.CustomControls.TextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicalLibrary.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200">
    <Grid Height="25" Width="300">
        <DockPanel Width="300">
            <TextBlock Text="{Binding FieldName}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox Text="{Binding FieldValue}" HorizontalAlignment="Right" VerticalAlignment="Center" Height="25" Width="125"/>
        </DockPanel>
    </Grid>
</UserControl>
