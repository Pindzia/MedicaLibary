<Window x:Class="MedicalLibrary.View.Windows.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalLibrary.View.Windows"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        mc:Ignorable="d"
        Title="EntryWindow" Height="550" Width="500" MaxHeight="550" MaxWidth="500" MinHeight="550" MinWidth="500" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/View/CustomControls/LoginControl.xaml" x:Name="ModernTab" Layout="Tab">
            <mui:ModernTab.Links>
                <mui:Link Source="/View/CustomControls/RegisterControl.xaml" />
                <mui:Link Source="/View/CustomControls/LoginControl.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</Window>
